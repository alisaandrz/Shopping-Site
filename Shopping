<script type="text/javascript">
    function add_item() {
        let item = document.getElementById("box");
        let list_item = document.getElementById("list_item");
        if(item.value !== "") {
            if(item.value.toLowerCase() == "cheese") {
                alert("Good choice!üßÄ");
            }
            if(item.value.toLowerCase() == "chocolate") {
                alert("Yummy! üç´");
            }
            if(item.value.toLowerCase() == "pizza") {
                alert("Share with us! üçï");
            }
            if(item.value.toLowerCase() == "milk") {
                alert("Maybe chocolate milk? üç´ü•õ");
            }
            let make_li = document.createElement("li");
            make_li.appendChild(document.createTextNode(item.value));
            list_item.appendChild(make_li);
            item.value = "";
            make_li.onclick = function() {
                this.parentNode.removeChild(this);
            }
        } else {
            alert("Comment submitted. Thank you! (^„Éªœâ„Éª^ ) ");
        }  
    }
</script>

